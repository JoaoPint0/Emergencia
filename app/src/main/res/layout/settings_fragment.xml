<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        tools:context=".ui.settings.SettingsFragment">

    <Button android:id="@+id/settings_location"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:drawablePadding="8dp"
              android:drawableStart="@drawable/ic_location_on_black"
              android:drawableTint="@android:color/black"
              android:background="?attr/selectableItemBackground"
            android:textAlignment="textStart"
            android:textAllCaps="false"
              android:text="Location"/>

    <TextView android:id="@+id/settings_emergency_contacts"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:drawablePadding="8dp"
              android:drawableStart="@drawable/ic_call"
              android:drawableTint="@android:color/black"
              android:background="?attr/selectableItemBackground"
              android:text="Emergency Contact"/>

    <TextView android:id="@+id/settings_help"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:drawablePadding="8dp"
              android:drawableStart="@drawable/ic_help"
              android:text="Help"/>

    <TextView android:id="@+id/settings_info"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:drawablePadding="8dp"
              android:drawableStart="@drawable/ic_info"
              android:text="About"/>

    <TextView android:id="@+id/settings_share"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:drawablePadding="8dp"
              android:drawableStart="@drawable/ic_share"
              android:text="Share"/>

    <TextView android:id="@+id/settings_rating"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:drawablePadding="8dp"
              android:drawableStart="@drawable/ic_star_border"
              android:text="Rating"/>

    <TextView android:id="@+id/settings_contribute"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:textSize="16sp"
              android:textColor="@android:color/black"
              android:drawablePadding="8dp"
              android:drawableStart="@drawable/ic_payment_black"
              android:text="Contribute"/>

</LinearLayout>